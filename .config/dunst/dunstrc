[global]
    ### Display ###
    monitor = 0
    follow = mouse
    geometry = "280x50-12+40"
    indicate_hidden = yes
    shrink = no
    transparency = 0
    notification_height = 0
    separator_height = 0
    padding = 25
    horizontal_padding = 20
    #frame_width = 2
    #frame_color = "#aaa"
    separator_color = frame
    sort = yes
    idle_threshold = 120

    ### Text ###
    font = SpaceMono 10
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    icon_position = left
    min_icon_size = 0
    max_icon_size = 32
    # icon_path = 

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###

    #dmenu
    dmenu = /usr/bin/rofi -dmenu -p dunst show_indicators = true indicate_hidden = false

    # Browser
    browser = brave

    # Always run rule-defined scripts, even if the notification is suppressed
    always_run_script = true

    # Define the title of the windows spawned by dunst
    title = Dunst

    # Define the class of the windows spawned by dunst
    class = Dunst

    startup_notification = false
    verbosity = mesg
    corner_radius = 0
    ignore_dbusclose = false

    ### Legacy
    force_xinerama = false

    ### mouse
    mouse_left_click = do_action
    mouse_middle_click =  close_all
    mouse_right_click = close_current

[experimental]
    per_monitor_dpi = false

[shortcuts]

    # Close notification.
    close = ctrl+space

    # Close all notifications.
    close_all = ctrl+shift+space

    # Redisplay last message(s).
    history = ctrl+grave

    # Context menu.
    context = ctrl+shift+period

[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the "#" and following would be interpreted as a comment.
    background = "#272A34"
    foreground = "#FFD86E"
    #frame_color = "#EC0101"
    timeout = 5
    # Icon for notifications with low urgency, uncomment to enable
    #icon = /path/to/icon

[urgency_normal]
    background = "#272A34"
    foreground = "#FFD86E"
    #frame_color = "#EC0101"
    timeout = 5
    # Icon for notifications with normal urgency, uncomment to enable
    #icon = /path/to/icon

[urgency_critical]
    background = "#272A34"
    foreground = "#FFD86E"
    #frame_color = "#EC0101"
    timeout = 5
    # Icon for notifications with critical urgency, uncomment to enable
    #icon = /path/to/icon
